<?xml version="1.0" encoding="UTF-8"?>
<configuration debug="false" scan="false" scanPeriod="10 seconds" packagingData="true">
    <property name="APP_NAME" value="${project.artifactId}"/>
    <!-- Context Name -->
    <contextName>${APP_NAME}</contextName>
    <!--控制台输出appender-->
    <appender name="console" class="ch.qos.logback.core.ConsoleAppender">
        <!-- 日志输出编码 -->
        <encoder>
            <!--格式化输出：%d表示日期，%thread表示线程名，%-5level：级别从左显示5个字符宽度%msg：日志消息，%n是换行符-->
            <pattern>%d{"yyyy-MM-dd'T'HH:mm:ss.SSSXXX",UTC} [%contextName] [%thread] [%X{trace_id}] %level %logger{64} - %msg%n</pattern>
            <charset>UTF-8</charset>
        </encoder>
    </appender>

    <!-- 调整第三方包日志级别 -->
    <logger name="com.netflix.discovery" level="WARN"/>
    <logger name="com.xxl.job" level="WARN"/>
    <logger name="org.springframework.cloud" level="WARN"/>
    <!-- 业务日志: additivity="false" -->
    <logger name="com.apzda" level="${logger.level}"/>

    <root level="INFO">
        <appender-ref ref="console"/>
    </root>
</configuration>